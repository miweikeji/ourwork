<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/activity_bg"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:id="@+id/iv_house"
                android:src="@mipmap/house"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/iv_house"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout9">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#D4D3D3"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/relativeLayout8">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_alignParentTop="true"
                                android:background="#D4D3D3"
                                android:id="@+id/textView71" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/textView71"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/tv_houstype"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--"

                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true" />
                                </RelativeLayout>
                                <TextView
                                    android:layout_width="0.5dp"
                                    android:layout_height="match_parent"
                                    android:background="#D4D3D3"/>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <TextView
                                        android:id="@+id/tv_housearea"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--"

                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true" />
                                </RelativeLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_above="@+id/relativeLayout8">
                            <TextView
                                android:id="@+id/tv_totalPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="合同总额："
                                android:textSize="18sp"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#D4D3D3"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tv_designerPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设计总额："

                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#D4D3D3"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tv_craftPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="施工总额："

                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#D4D3D3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <TextView
                                    android:id="@+id/tv_housestyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#D4D3D3"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <TextView
                                    android:id="@+id/tv_craftmode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_below="@+id/relativeLayout9"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:background="#E0E0E0"
                        android:layout_alignParentStart="true"
                        android:id="@+id/relativeLayout10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="计"
                            android:textSize="20sp"
                            android:id="@+id/textView65"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设"
                            android:textSize="20sp"
                            android:id="@+id/textView66"
                            android:layout_above="@+id/textView65"
                            android:layout_centerHorizontal="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="师"
                            android:textSize="20sp"
                            android:id="@+id/textView67"
                            android:layout_below="@+id/textView65"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:layout_toRightOf="@+id/relativeLayout10"
                        android:layout_toEndOf="@+id/relativeLayout10">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/iv_house_designer"
                            android:src="@mipmap/test"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="习近平"
                            android:id="@+id/tv_designer_name"
                            android:textSize="18sp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_house_designer"
                            android:layout_toEndOf="@+id/iv_house_designer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设计师"
                            android:id="@+id/textView58"
                            android:layout_marginLeft="5dp"
                            android:layout_alignBottom="@+id/tv_designer_name"
                            android:layout_toRightOf="@+id/tv_designer_name"
                            android:layout_toEndOf="@+id/tv_designer_name" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34岁/10年设计经验"
                            android:id="@+id/tv_house_age_workage"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/tv_designer_name"
                            android:layout_alignLeft="@+id/tv_designer_name"
                            android:layout_alignStart="@+id/tv_designer_name" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="擅长：欧式，田园，美式乡村，古典"
                            android:id="@+id/tv_house_expert"
                            android:layout_below="@+id/tv_house_age_workage"
                            android:layout_alignLeft="@+id/tv_house_age_workage"
                            android:layout_marginTop="5dp"
                            android:layout_alignStart="@+id/tv_house_age_workage" />
                    </RelativeLayout>


                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D4D3D3"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:background="#E0E0E0"
                        android:layout_alignParentStart="true"
                        android:id="@+id/relativeLayout11">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="施"
                            android:textSize="20sp"
                            android:id="@+id/textView68"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工"
                            android:textSize="20sp"
                            android:id="@+id/textView69"
                            android:layout_above="@+id/textView68"
                            android:layout_centerHorizontal="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="方"
                            android:textSize="20sp"
                            android:id="@+id/textView70"
                            android:layout_below="@+id/textView68"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:layout_toRightOf="@+id/relativeLayout11"
                        android:layout_toEndOf="@+id/relativeLayout11">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/iv_house_craft"
                            android:src="@mipmap/test"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="习近平"
                            android:id="@+id/tv_craft_name"
                            android:textSize="18sp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_house_craft"
                            android:layout_toEndOf="@+id/iv_house_craft" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设计师"
                            android:id="@+id/textView62"
                            android:layout_marginLeft="5dp"
                            android:layout_alignBottom="@+id/tv_craft_name"
                            android:layout_toRightOf="@+id/tv_craft_name"
                            android:layout_toEndOf="@+id/tv_craft_name" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34岁/10年设计经验"
                            android:id="@+id/tv_house_age_workage_craft"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/tv_craft_name"
                            android:layout_alignLeft="@+id/tv_craft_name"
                            android:layout_alignStart="@+id/tv_craft_name" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="擅长：欧式，田园，美式乡村，古典"
                            android:id="@+id/tv_house_expert_craft"
                            android:layout_below="@+id/tv_house_age_workage_craft"
                            android:layout_alignLeft="@+id/tv_house_age_workage_craft"
                            android:layout_marginTop="5dp"
                            android:layout_alignStart="@+id/tv_house_age_workage_craft" />

                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>