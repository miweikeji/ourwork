<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="非常感谢您对我们产品提出的宝贵意见，您的建议让我们的产品做的更好！"
        android:id="@+id/textView38"
        android:lineSpacingMultiplier="1.5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/margin_top"
     />

    <EditText
        android:id="@+id/ed_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ed_bg"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:gravity="top"
        android:hint="请在此输入您的意见"
        android:maxLength="100"
        android:minHeight="150dp"
        android:padding="14dp"
        android:textSize="16sp"
        android:layout_below="@+id/textView38"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <Button
        android:id="@+id/btn_next"
        style="@style/click_btn"
        android:background="@drawable/sl_orgin"
        android:onClick="btn_click"
        android:text="提交"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="/100"
        android:id="@+id/tv_percent"
        android:layout_below="@+id/ed_feedback"
        android:layout_alignRight="@+id/ed_feedback"
        android:layout_alignEnd="@+id/ed_feedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:textColor="@color/base_orange"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_account"
        android:layout_below="@+id/ed_feedback"
        android:layout_toLeftOf="@+id/tv_percent"
        android:layout_toStartOf="@+id/tv_percent" />


</RelativeLayout>