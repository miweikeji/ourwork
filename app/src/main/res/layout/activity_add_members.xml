<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:paddingTop="25dp"
    tools:context="app.activity.AddMembersActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button2">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班组成员"
            android:textSize="16sp"
            android:id="@+id/textView40"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="15dp"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/textView40"
    android:background="@drawable/has_greads_line_bg"
    android:layout_toLeftOf="@+id/rl_add_member"
    android:layout_toStartOf="@+id/rl_add_member">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:inputType="phone"
            android:background="@null"
            android:ems="11"
            android:id="@+id/et_members_phone"
            android:hint="请输入手机号码"

            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
             />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_add_member"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView17"
            android:layout_marginRight="15dp"
            android:src="@mipmap/add_members"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    </RelativeLayout>
            <LinearLayout
                android:id="@+id/line_add_memebers"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="完成"
            android:id="@+id/button2"
            android:textColor="@color/white"
            android:background="@drawable/sl_orgin"
            android:layout_alignParentBottom="true"
            android:onClick="addComplete"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true" />
</RelativeLayout>
