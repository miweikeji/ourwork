<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical"
    android:paddingTop="25dp"
    tools:context="app.activity.AddMembersActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班组成员"
            android:textSize="16sp"
            android:id="@+id/textView39"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:layout_marginRight="15dp"
            android:textColor="@color/base_orange"
            android:textSize="16sp"
            android:id="@+id/textView41"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:text="下滑"
            android:textSize="16sp"
            android:background="@color/base_orange"
            android:id="@+id/textView42"
            android:layout_below="@+id/textView41"
            android:layout_alignRight="@+id/textView41"
            android:layout_alignEnd="@+id/textView41" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView39"
            android:layout_toLeftOf="@+id/relativeLayout3"
            android:layout_toStartOf="@+id/relativeLayout3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/has_greads_line_bg">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:background="@null"
            android:ems="11"
            android:textSize="16sp"
            android:id="@+id/editText"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班组成员"
            android:textSize="16sp"
            android:id="@+id/textView40"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="15dp"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/textView40"
    android:background="@drawable/has_greads_line_bg"
    android:layout_toLeftOf="@+id/relativeLayout4"
    android:layout_toStartOf="@+id/relativeLayout4">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:inputType="phone"
            android:background="@null"
            android:ems="11"
            android:id="@+id/editText2"
            android:hint="请输入手机号码"

            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
             />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView17"
            android:layout_marginRight="15dp"
            android:src="@mipmap/add_members"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="完成"
            android:id="@+id/button2"
            android:textColor="@color/white"
            android:background="@drawable/sl_orgin"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
