<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="app.activity.BasicInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/has_greads_line_bg"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="姓名："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView8"
                    android:layout_toRightOf="@+id/textView8"
                    android:background="@null"
                    android:hint="请输入您的姓名"
                    android:maxLength="12"
                    android:inputType="text"
                    android:textSize="15sp" />
                <View
                    style="@style/item_divide_nomargin"
                    android:layout_height="1.5dp"
                    android:background="@color/base_green"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/et_name"
                    android:layout_alignStart="@+id/et_name"></View>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="年龄："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"

                    android:layout_toEndOf="@+id/textView1"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="@null"
                    android:hint="请输入您的年龄"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="15sp" />
                <View
                    style="@style/item_divide_nomargin"
                    android:layout_height="1.5dp"
                    android:background="@color/base_green"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/et_age"
                    android:layout_alignStart="@+id/et_age"></View>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_work_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp">
<!---->
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="工种："
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/tv_work_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_toRightOf="@+id/textView2"
                    android:text="选择最擅长的工种"
                    android:textSize="15sp" />
                <View
                    style="@style/item_divide_nomargin"
                    android:layout_height="1.5dp"
                    android:background="@color/base_green"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/tv_work_type"
                    android:layout_alignStart="@+id/tv_work_type"></View>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_arrow_drop_down_black" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"

                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="工龄："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_work_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_toRightOf="@+id/textView3"
                    android:background="@null"
                    android:hint="输入您的工龄"
                    android:maxLength="3"
                    android:inputType="number"
                    android:textSize="15sp" />
                <View
                    style="@style/item_divide_nomargin"
                    android:layout_height="1.5dp"
                    android:background="@color/base_green"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/et_work_age"
                    android:layout_alignStart="@+id/et_work_age"></View>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="家乡："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView4"
                    android:layout_toRightOf="@+id/textView4"
                    android:background="@null"
                    android:hint="如：安徽"
                    android:maxLength="12"
                    android:inputType="text"
                    android:textSize="15sp" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        style="@style/click_btn"
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/sl_orgin"
        android:text="提交保存"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
